<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/materialCardView_1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="start|top"
    android:layout_margin="@dimen/film_spacing"
    android:elevation="@dimen/element_elevation"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/layout_borders_margin"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/imageview_size_width"
            android:layout_height="@dimen/imageview_size_height"
            android:layout_marginBottom="@dimen/view_spacing"
            android:layout_gravity="center"
            android:src="@drawable/joker"
            tools:src="@drawable/no_image" />
        </FrameLayout>

        <TextView
            android:id="@+id/textView_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_film_1"
            android:textColor="@color/black"
            android:textSize="@dimen/text_film_name"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/view_spacing"
            android:textAlignment="center"
            tools:text="Sample Text" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_detail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_size_height"
            android:text="@string/button_info"
            android:textSize="@dimen/text_button_info"
            android:textStyle="bold"
            app:icon="@drawable/ic_baseline_info_24"
            app:iconGravity="end"
            app:cornerRadius="@dimen/element_radius"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>