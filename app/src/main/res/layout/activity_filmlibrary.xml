<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:layout_marginBottom="@dimen/layout_borders_margin"
    tools:context=".FilmLibraryActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_borders_margin"
        android:layout_marginEnd="@dimen/layout_borders_margin"
        android:layout_marginStart="@dimen/layout_borders_margin"
        android:background="@drawable/shape_rounded"
        android:elevation="@dimen/element_box_elevation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_invite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/layout_borders_margin"
            android:elevation="@dimen/element_elevation"
            android:text="@string/button_share"
            app:cornerRadius="@dimen/element_radius" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relativeLayout_films_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_borders_margin"
        android:background="@drawable/shape_rounded"
        android:elevation="@dimen/element_box_elevation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/relativeLayout_control">

        <androidx.cardview.widget.CardView
            android:id="@+id/materialCardView_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|top"
            android:layout_margin="@dimen/film_spacing"
            android:elevation="@dimen/element_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/layout_borders_margin"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView_1"
                    android:layout_width="@dimen/imageview_size_width"
                    android:layout_height="@dimen/imageview_size_height"
                    android:layout_marginBottom="@dimen/view_spacing"
                    android:gravity="top"
                    android:src="@drawable/joker"
                    tools:src="@drawable/no_image" />

                <TextView
                    android:id="@+id/textView_name_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_film_1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_film_name"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/view_spacing"
                    android:textAlignment="center"
                    tools:text="Sample Text" />
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_info_1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_size_height"
                        android:text="@string/button_info"
                        android:textSize="@dimen/text_button_info"
                        android:textStyle="bold"
                        app:icon="@drawable/ic_baseline_info_24"
                        app:iconGravity="end"
                        app:cornerRadius="@dimen/element_radius"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/materialCardView_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|top"
            android:layout_marginTop="@dimen/cardview_2_row"
            android:layout_marginEnd="@dimen/film_spacing"
            android:layout_marginBottom="@dimen/film_spacing"
            android:layout_alignParentEnd="true"
            android:elevation="@dimen/element_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/layout_borders_margin"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView_4"
                    android:layout_width="@dimen/imageview_size_width"
                    android:layout_height="@dimen/imageview_size_height"
                    android:layout_marginBottom="@dimen/view_spacing"
                    android:gravity="top"
                    android:src="@drawable/dovod"
                    tools:src="@drawable/no_image" />

                <TextView
                    android:id="@+id/textView_name_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_film_4"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_film_name"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/view_spacing"
                    android:textAlignment="center"
                    tools:text="Sample Text" />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_info_4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_size_height"
                    android:text="@string/button_info"
                    android:textSize="@dimen/text_button_info"
                    android:textStyle="bold"
                    app:icon="@drawable/ic_baseline_info_24"
                    app:iconGravity="end"
                    app:cornerRadius="@dimen/element_radius"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/materialCardView_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|top"
            android:layout_margin="@dimen/film_spacing"
            android:layout_alignParentEnd="true"
            android:elevation="@dimen/element_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/layout_borders_margin"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView_2"
                    android:layout_width="@dimen/imageview_size_width"
                    android:layout_height="@dimen/imageview_size_height"
                    android:layout_marginBottom="@dimen/view_spacing"
                    android:gravity="top"
                    android:src="@drawable/green_book"
                    tools:src="@drawable/no_image" />

                <TextView
                    android:id="@+id/textView_name_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_film_2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_film_name"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/view_spacing"
                    android:textAlignment="center"
                    tools:text="Sample Text" />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_info_2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_size_height"
                    android:text="@string/button_info"
                    android:textSize="@dimen/text_button_info"
                    android:textStyle="bold"
                    app:icon="@drawable/ic_baseline_info_24"
                    app:iconGravity="end"
                    app:cornerRadius="@dimen/element_radius"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/materialCardView_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|top"
            android:layout_marginTop="@dimen/cardview_2_row"
            android:layout_marginStart="@dimen/film_spacing"
            android:layout_marginBottom="@dimen/film_spacing"
            android:elevation="@dimen/element_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/layout_borders_margin"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView_3"
                    android:layout_width="@dimen/imageview_size_width"
                    android:layout_height="@dimen/imageview_size_height"
                    android:layout_marginBottom="@dimen/view_spacing"
                    android:gravity="top"
                    android:src="@drawable/mulan"
                    tools:src="@drawable/no_image" />

                <TextView
                    android:id="@+id/textView_name_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_film_3"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_film_name"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/view_spacing"
                    android:textAlignment="center"
                    tools:text="Sample Text" />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_info_3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_size_height"
                    android:text="@string/button_info"
                    android:textSize="@dimen/text_button_info"
                    android:textStyle="bold"
                    app:icon="@drawable/ic_baseline_info_24"
                    app:iconGravity="end"
                    app:cornerRadius="@dimen/element_radius"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>