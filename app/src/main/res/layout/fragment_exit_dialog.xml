<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/view_spacing"
    android:hapticFeedbackEnabled="true">

    <TextView
        android:id="@+id/tv_exit_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/view_spacing"
        android:text="@string/text_exit_dialog"
        android:textSize="@dimen/text_exit_dialog"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_exit_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/view_spacing"
        android:layout_marginTop="@dimen/view_spacing"
        android:text="@string/button_exit_accept"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_exit_dismiss"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_exit_info" />

    <Button
        android:id="@+id/button_exit_dismiss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/view_spacing"
        android:layout_marginTop="@dimen/view_spacing"
        android:text="@string/button_exit_dismiss"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_exit_accept"
        app:layout_constraintTop_toBottomOf="@id/tv_exit_info" />

</androidx.constraintlayout.widget.ConstraintLayout>